<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ehcache.xsd">
	<sizeOfPolicy maxDepth="5" maxDepthExceededBehavior="abort"/> 
    <diskStore path="java.io.tmpdir" />
    <defaultCache maxElementsInMemory="1000" eternal="false" timeToIdleSeconds="1" timeToLiveSeconds="1" overflowToDisk="false" />
    <cache name="products" maxElementsInMemory="1000" eternal="false" timeToIdleSeconds="1" timeToLiveSeconds="1" overflowToDisk="false" />
</ehcache>